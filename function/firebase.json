{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/api/webhook",
        "function": "api"
      }
    ]
  },
  "functions": {
    "runtime": "nodejs18"
  }
}
